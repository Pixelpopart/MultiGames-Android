<?xml version="1.0" encoding="utf-8"?>

<!-- Container -->
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_game_container_layout_margin"
        app:cardCornerRadius="@dimen/item_game_container_cardCornerRadius"
        app:cardElevation="@dimen/item_game_container_cardElevation">

    <!-- Content -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!-- Thumbnail -->
        <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_game_thumbnail_layout_height"
                android:contentDescription="@string/item_game_thumbnail_contentDescription"
                android:scaleType="centerCrop" />

        <!-- Title -->
        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/item_game_name_layout_margin"
                android:gravity="center"
                android:lines="2"
                android:minLines="2"
                android:singleLine="false"
                android:textSize="@dimen/item_game_name_textSize"
                android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>
